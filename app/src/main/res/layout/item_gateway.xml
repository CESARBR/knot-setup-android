<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grey_bg" />

    <ImageView
        android:id="@+id/gateway_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/colorWhite"
        android:tint="@color/colorKnotGreen"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"
        app:srcCompat="@drawable/ic_speaker" />

    <TextView
        android:id="@+id/gateway_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorKnotGreen"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingBottom="24dp"
        android:backgroundTint="@color/colorWhite"
        android:text="TextView"
        android:textColor="@color/colorKnotGreen"
        app:layout_constraintEnd_toEndOf="@+id/gateway_image"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/gateway_image"
        app:layout_constraintTop_toBottomOf="@+id/gateway_image" />

</android.support.constraint.ConstraintLayout>
